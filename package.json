{
  "name": "modulebuilder3000",
  "version": "0.0.1",
  "description": "Super easy module builder setup with Microbundle and Parcel",
  "keywords": [
    "module",
    "build"
  ],
  "main": "src/index.js",
  "repository": "https://github.com/ezekielaquino/ModuleBuilder3000",
  "author": "Ezekiel Aquino <ezekielaquino@gmail.com>",
  "scripts": {
    "start": "cd src && microbundle watch --output ../dist",
    "build": "cd src && microbundle build --output ../dist --sourcemap false",
    "dev": "yarn start & yarn --cwd demo start"
  },
  "devDependencies": {
    "microbundle": "^0.6.0",
    "parcel": "^1.9.7",
    "stylus": "^0.54.5",
    "gh-pages": "^1.2.0"
  },
  "umd:main": "dist/index.umd.js",
  "module": "src/index.js",
  "source": "src/index.js"
}
